<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiqutepets.mapper.DeviceActionLogMapper">

    <resultMap id="BaseResultMap" type="com.aiqutepets.entity.DeviceActionLog">
        <id column="id" property="id"/>
        <result column="device_uid" property="deviceUid"/>
        <result column="action_code" property="actionCode"/>
        <result column="duration_or_count" property="durationOrCount"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, device_uid, action_code, duration_or_count, create_time
    </sql>

    <!-- 插入动作日志 -->
    <insert id="insert" parameterType="com.aiqutepets.entity.DeviceActionLog" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO device_action_log (device_uid, action_code, duration_or_count, create_time)
        VALUES (#{deviceUid}, #{actionCode}, #{durationOrCount}, #{createTime})
    </insert>

    <!-- 根据设备UID查询 -->
    <select id="selectByDeviceUid" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM device_action_log
        WHERE device_uid = #{deviceUid}
        ORDER BY create_time DESC
    </select>

    <!-- 根据设备UID和动作代码查询 -->
    <select id="selectByDeviceUidAndActionCode" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM device_action_log
        WHERE device_uid = #{deviceUid}
          AND action_code = #{actionCode}
        ORDER BY create_time DESC
    </select>

    <!-- 根据时间范围查询 -->
    <select id="selectByTimeRange" resultMap="BaseResultMap">
        SELECT <include refid="Base_Column_List"/>
        FROM device_action_log
        WHERE device_uid = #{deviceUid}
          AND create_time BETWEEN #{startTime} AND #{endTime}
        ORDER BY create_time DESC
    </select>

    <!-- 统计设备的动作次数 -->
    <select id="countByDeviceUid" resultType="int">
        SELECT COUNT(*)
        FROM device_action_log
        WHERE device_uid = #{deviceUid}
    </select>

</mapper>
